<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="desktop.Views.MainPage"
             
             >
    <VerticalStackLayout Spacing="25" VerticalOptions="Center">
        <Image Source="concilig_full_logo.png" WidthRequest="250"/>
        <Label HorizontalOptions="Center" Text="Faça login ou cadastre-se!"/>

        <StackLayout Grid.Row="2" WidthRequest="320" Spacing="15">
            <Button Text="Entrar" Clicked="GoToLogin"/>
            <Button Text="Criar Conta" Clicked="GoToRegister" Style="{StaticResource OutlineButton}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
